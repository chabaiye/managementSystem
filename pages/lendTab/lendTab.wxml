<van-nav-bar
  title="物资借还"
  left-text="返回"
  left-arrow
  bind:click-left="onClickLeft"
/>
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="未下单">
    <scroll-view style="height: 83vh;" enhanced="{{true}}"show-scrollbar="{{false}}"scroll-y="true">
      <view   wx:for="{{actions}}" wx:key="item">
        <view wx:for="{{item.goodList}}" wx:key="item">
          <view style="height: 40vw; display: flex;" wx:for="{{item.underGoodList}}" wx:key="item">
            <image src="{{item.url}}" style="height: 35vw; width: 35vw;" mode=""/>
              <view>
                <view>{{item.name}}</view>
                <view>还有{{item.num}}个</view>
                <van-stepper disabled value="{{item.selectedNum}}"/>
              </view>
          </view>
        </view>
      </view>
      <view style="{{actions==0?'display: none;':''}}">
        <button bind:tap="order" style=" width: 60vw;  margin-bottom: 5vw;" type="warn">确定</button>
        <button bind:tap="cancel" style=" width: 60vw; margin-bottom: 5vw;" type="default">取消</button>
      </view>
      <view style="{{actions==0?'':'display: none;'}}" class="container">
        <view class="mail">
          <view>您尚未预订借出物资</view>
        </view>
      </view>
      <van-notify id="custom-selector" />
    </scroll-view>
  </van-tab>
  <van-tab title="已借物资">
    <scroll-view style="height: 83vh;" enhanced="{{true}}"show-scrollbar="{{false}}"scroll-y="true">
      <view wx:for="{{loaned}}" wx:key="item">
          <view style="height: 40vw; display: flex;">
            <image src="{{item.url}}" style="height: 35vw; width: 35vw;" mode=""/>
              <view>
                <view>{{item.name}}</view>
                <view>还有{{item.num}}个</view>
                <van-stepper disabled value="{{item.selectedNum}}"/>
          </view>
        </view>
      </view>
      <view style="{{loaned.length==0?'':'display: none;'}}" class="container">
        <view class="mail">
          <view>您尚未借过物资</view>
        </view>
      </view>
      <van-notify id="custom-selector" />
    </scroll-view>
  </van-tab>
  <van-tab title="未归还物资"></van-tab>
  <van-tab title="历史借还"></van-tab>
</van-tabs>
